@model online_journal.Models.Teacher

@{
    ViewData["Title"] = "Tahrir kardani omuzgor";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects"></select>
    </div>
    <button type="submit" class="btn btn-primary">Sabt kardan</button>
</form>
