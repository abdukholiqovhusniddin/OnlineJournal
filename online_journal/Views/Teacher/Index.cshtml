@model IEnumerable<online_journal.Models.Teacher>

@{
    ViewData["Title"] = "Ruyxati omuzforho";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Doxil kardani omuzgor
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-primary">
        <tr>
            <th scope="col">Nomi purra</th>
            <th scope="col">Telefon</th>
            <th scope="col">Fan</th>
            <th scope="col" style="width:180px;">Amalho</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Subject?.Name <span class='text-muted'></span></td>
                <td style="display:flex">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Tahrir kardan">
                        <i class="bi bi-pencil">Tahrir kardan</i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="Batafsil">
                        <i class="bi bi-eye">Didan</i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Xorij kardan" onclick="return confirm('Shumo dar haqiqat xorij kardani hasted');">
                        <i class="bi bi-trash">Xorij kardan</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
