@model online_journal.Models.Student

@{
    ViewData["Title"] = "Xonandai nav";

    var classes = ViewBag.Classes as List<online_journal.Models.Class>;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClassId">Sinf</label>
        <select asp-for="ClassId" class="form-control" asp-items="@(new SelectList(classes, "Id", "Name"))">
            <option value="">Sinfro intixob kuned</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Sabt kardan</button>
    <a asp-action="Index" class="btn btn-secondary">Ba qafo</a>
</form>
