@model IEnumerable<online_journal.Models.Student>

@{
    ViewData["Title"] = "Ruyxati xonandaho";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Doxil kardani xonandai nav</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nomi purra</th>
            <th>Sinf</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Class?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Tahrir kardan</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Didan</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xorij kardan</a>
                </td>
            </tr>
        }
    </tbody>
</table>
