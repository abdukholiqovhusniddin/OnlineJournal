@model online_journal.Models.Student

@{
    ViewData["Title"] = "Tahrir kardan";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClassId"></label>
        <select asp-for="ClassId" class="form-control" asp-items="ViewBag.Classes"></select>
    </div>
    <button type="submit" class="btn btn-primary">Ivaz kardan</button>
    <a asp-action="Index" class="btn btn-secondary">Ba qafo</a>
</form>
