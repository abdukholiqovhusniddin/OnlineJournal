@model online_journal.Models.Student

@{
    ViewData["Title"] = "Tafsiloti xonanda";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nomi purra</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Sinf</dt>
        <dd class="col-sm-10">@Model.Class?.Name</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Tahrir kardan</a>
<a asp-action="Index" class="btn btn-secondary">Ba qafo</a>
