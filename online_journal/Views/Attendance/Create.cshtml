@model online_journal.Models.Attendance

@{
    ViewData["Title"] = "Davomati nav";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Xonanda</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label">Sana</label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>

    <div class="form-group form-check mt-3">
        <input asp-for="IsPresent" class="form-check-input" />
        <label asp-for="IsPresent" class="form-check-label">Omadagi</label>
    </div>

    <button type="submit" class="btn btn-success mt-3">Sabt kardan</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Ba qafo</a>
</form>
