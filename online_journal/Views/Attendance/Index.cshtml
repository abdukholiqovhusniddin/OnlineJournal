@model IEnumerable<online_journal.Models.Attendance>

@{
    ViewData["Title"] = "Ruyxati davomot";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Davomati nav doxil kardan</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Xonanda</th>
            <th>Sana</th>
            <th>Omadagimi?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student?.FullName</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@(item.IsPresent ? "Ha" : "Ne")</td>
            </tr>
        }
    </tbody>
</table>
