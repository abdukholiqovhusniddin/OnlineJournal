@model online_journal.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Daromadan";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow p-4 rounded bg-white">
            <h3 class="text-center mb-4">Daromadan ba Jurnali electroni</h3>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label>Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email doxil kuned" />
                </div>
                <div class="form-group mb-3">
                    <label>Parol</label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" id="login-password" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('login-password')">👁</button>
                    </div>
                </div>
                <button type="submit" class="btn btn-success w-100">Daromadan</button>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="Register" asp-controller="Account">Az ruyxat guzashtagimi shumo? Az ruyxat guzared</a>
            </div>
        </div>
    </div>
</div>
