@model online_journal.Models.Homework

@{
    ViewData["Title"] = "Doxil kardani vazifai xonagi nav";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="@(ViewData["Subjects"] as IEnumerable<SelectListItem>)">
            <option value="">Fanro intixob kuned</option>
        </select>

        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Sabt kardan</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
